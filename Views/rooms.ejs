<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <!--Page Title-->
        <title>Rooms</title>
        <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
        <link href="admin.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href="/admin">Honance Hotel</a>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <!--Admin Profile-->
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!">Settings</a></li>
                        <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <!--Side Bar-->
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <!--Dashboard-->
                            <a class="nav-link" href="/admin">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Dashboard
                            </a>
                            <!--Bookings-->
                            <a class="nav-link" href="/bookings">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-bookmark"></i></div>
                                Bookings
                            </a>
                            <!--Rooms-->
                            <a class="nav-link" href="/rooms">
                                <div class="sb-nav-link-icon"><i class="fa-solid fa-door-open"></i></i></div>
                                Rooms
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Rooms</h1>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                            <li class="breadcrumb-item active">Rooms</li>
                        </ol>
                        <!--Rooms Data-->
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fa-solid fa-door-open"></i>
                                All Rooms  <a href="/formtambah" class="btn btn-info ms-5 fw-bold text-white">Add</a>
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple">
                                    <thead>
                                        <tr>
                                            <th>ID Room</th>
                                            <th>Name</th>
                                            <th>Facilities</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Photos</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach((datas,index) => { %>
                                        <tr>
                                            <td><%- datas.id_room %></td>
                                            <td><%- datas.name_room %></td>
                                            <td>
                                                <li><%- datas.name_facilities %></li>
                                            </td>
                                            <td><%- datas.quantity_room %></td>
                                            <td>Rp <%- datas.price_room %></td>
                                            <td><img src="/img/rooms/<%= datas.id_room %>.jpg" alt=""></td>
                                            <td>
                                                <center>
                                                <a href="/delete/<%= datas.id_room  %>" class="btn btn-danger badge" onclick="return confirm(`Yakin ingin dihapus?`)">Delete</a>
                                                <a href="/update/<%= datas.id_room  %>" class="btn btn-success badge">Update</a>
                                                </center>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; Honance Hotel</div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="scripts.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
        <script src="datatables-simple-demo.js"></script>
    </body>
</html>